<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.tvz.matko.naps.PictureActivity"
    android:id="@+id/background">

    <ImageView
        android:id="@+id/picture"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="61dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        tools:ignore="RtlHardcoded"
        tools:layout_editor_absoluteY="419dp"
        tools:layout_editor_absoluteX="283dp" />

    <Spinner
        android:id="@+id/spinnerValence"
        android:layout_width="105dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerArousal"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinnerArousal"
        android:layout_width="105dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonValenceMin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/valence_min"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonValenceMax"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/valence_max"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp" />

    <ImageButton
        android:id="@+id/imageButtonArousalMin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/arousal_min"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonArousalMax"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/arousal_max"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="218dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
